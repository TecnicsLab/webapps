<web-app>
		<servlet>
		<servlet-name>chat</servlet-name>
		<servlet-class>RegistrationServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>chatLogin</servlet-name>
		<servlet-class>logIn</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>chatLogout</servlet-name>
		<servlet-class>logOut</servlet-class>
	</servlet>
		<servlet>
		<servlet-name>DisplayMsg</servlet-name>
		<servlet-class>DisplayMessageServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>History</servlet-name>
		<servlet-class>History</servlet-class>
	</servlet>
<servlet-mapping>
		<servlet-name>chat</servlet-name>
		<url-pattern>/register</url-pattern>
	</servlet-mapping>
<servlet-mapping>
		<servlet-name>chatLogin</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
<servlet-mapping>
		<servlet-name>chatLogout</servlet-name>
		<url-pattern>/logout</url-pattern>
	</servlet-mapping>

<servlet-mapping>
		<servlet-name>DisplayMsg</servlet-name>
		<url-pattern>/displaymsg</url-pattern>
	</servlet-mapping>
<servlet-mapping>
		<servlet-name>History</servlet-name>
		<url-pattern>/history</url-pattern>
	</servlet-mapping>
</web-app>
	
